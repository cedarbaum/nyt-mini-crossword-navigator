{
  "manifest_version": 2,
  "name": "NYT Mini Crossword Navigator",
  "version": "1.0",
  "description": "Navigate through NYT Mini Crossword archives.",
  "permissions": [
    "activeTab",
    "webNavigation",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.nytimes.com/crosswords/game/mini/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "web_accessible_resources": [
    "icons/next.svg",
    "icons/auto-next.svg",
    "icons/previous.svg",
    "icons/auto-previous.svg",
    "icons/autoplay.svg"
  ]
}
